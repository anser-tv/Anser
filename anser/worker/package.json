{
  "name": "anser-worker",
  "version": "1.0.0",
  "description": "Anser Worker package",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "Tom Lee",
  "license": "MIT",
  "scripts": {
    "build": "yarn audit && yarn lint && yarn test && tsc",
    "build:dev": "tsc",
    "buildstart": "yarn build && yarn start",
    "buildstart:dev": "yarn build && DEV=1 yarn start",
    "install-recursive": "yarn-recursive --skipRoot",
    "lint": "tslint -c 'tslint.json' 'src/**/*.ts'",
    "postinstall": "yarn install-recursive",
    "test": "yarn lint && jest --passWithNoTests --runInBand",
    "start": "node dist/index.js",
    "watch": "nodemon"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.15",
    "@types/request-promise": "^4.1.44",
    "@types/supertest": "^2.0.8",
    "@types/systeminformation": "^3.23.1",
    "@types/uuid": "^3.4.5",
    "eslint": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2",
    "yarn": "^1.22.0",
    "yarn-recursive": "^1.1.0"
  },
  "dependencies": {
    "@types/node": "^12.6.8",
    "anser-types": "1.0.0",
    "express": "^4.17.1",
    "request-promise": "^4.2.4",
    "systeminformation": "^4.14.16",
    "winston": "^3.2.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn lint && tsc && DEV=true node dist/index.js",
    "ext": "ts"
  }
}
