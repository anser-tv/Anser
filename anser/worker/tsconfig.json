{
	"compilerOptions": {
		/* Basic Options */
		"target": "es2019",
		"module": "commonjs",
		"lib": ["es6"],
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",

		/* Strict Type-Checking Options */
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"preserveSymlinks": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		".vscode"
	]
}
