{
	"compilerOptions": {
		/* Basic Options */
		"target": "es2019",
		"module": "commonjs",
		"lib": ["es6"],
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./",

		/* Strict Type-Checking Options */
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"include": [
		"./src/**/*.ts", "./index.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		".vscode"
	]
}
