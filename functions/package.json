{
    "name": "some-function",
    "version": "1.0.0",
    "description": "Anser Controller package",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "author": "Tom Lee",
    "license": "MIT",
    "scripts": {
        "build": "yarn audit && yarn lint && yarn test && tsc",
        "start": "node dist/index.js",
        "buildstart": "yarn build && yarn start",
        "lint": "tslint -c 'tslint.json' 'src/**/*.ts'",
        "test": "yarn lint && jest --passWithNoTests --runInBand",
        "watch": "nodemon"
    },
    "dependencies": {
        "anser-function-gstreamer": "git+https://github.com/anser-tv/anser-function-gstreamer.git"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "yarn lint && tsc && DEV=true node dist/index.js",
        "ext": "ts"
    },
    "resolutions": {
        "readable-stream": "3.4.0",
        "color-name": "1.1.4",
        "string_decoder": "1.3.0",
        "safe-buffer": "5.1.2"
    }
}