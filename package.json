{
  "name": "anser-worker",
  "version": "1.0.0",
  "description": "Anser Worker package",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "Tom Lee",
  "license": "MIT",
  "scripts": {
    "build": "yarn audit && yarn lint && yarn test && tsc",
    "start": "node dist/index.js",
    "buildstart": "yarn build && yarn start",
    "lint": "tslint -c 'tslint.json' 'src/**/*.ts'",
    "test": "yarn lint && jest --passWithNoTests --runInBand",
    "watch": "nodemon"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "@types/request-promise": "^4.1.44",
    "eslint": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "yarn": "^1.19.1"
  },
  "dependencies": {
    "@types/express": "^4.17.0",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.5",
    "anser-types": "git+https://github.com/anser-tv/anser-types.git",
    "express": "^4.17.1",
    "request-promise": "^4.2.4",
    "winston": "^3.2.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn lint && tsc && DEBUG=true node dist/index.js",
    "ext": "ts"
  }
}